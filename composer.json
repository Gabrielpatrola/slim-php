{
    "name": "jobsity/slim-challenge",
    "description": "PHP Challenge - Jobsity",
    "type": "project",
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.7",
        "slim/psr7": "^1.3",
        "swiftmailer/swiftmailer": "^6.0",
        "php-di/php-di": "^6.3",
        "symfony/dotenv": "^5.2",
        "tuupola/slim-basic-auth": "^3.3",
        "php-amqplib/php-amqplib": "^3.0",
        "ext-json": "*",
        "doctrine/orm": "^2.13",
        "symfony/cache": "^6.1",
        "tuupola/slim-jwt-auth": "^3.6",
        "ext-curl": "*"
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
